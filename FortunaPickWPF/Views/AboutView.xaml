<UserControl
    x:Class="FortunaPickWPF.Views.AboutView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:locl="clr-namespace:FortunaPickWPF"
    xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:viewModels="clr-namespace:FortunaPickWPF.ViewModels"
    d:DataContext="{d:DesignInstance Type=viewModels:AboutViewModel,
                                     IsDesignTimeCreatable=False}"
    d:DesignHeight="450"
    d:DesignWidth="850"
    mc:Ignorable="d">

 
    <StackPanel>
        <StackPanel Height="280" Width="280">
            <Image Source="/Resources/Logo.png" />
        </StackPanel>
        <TextBlock
            HorizontalAlignment="Center"
            VerticalAlignment="Center"
            FontFamily="Arial Rounded MT Bold"
            FontSize="30"
            Foreground="black"
            Text="Version 1.0.0 ©️ 2004 Matthew Lewis" />


        <TextBlock
            FontFamily="Arial Rounded MT Bold"
            FontWeight="DemiBold"
            Foreground="Black"
            Text="{Binding AboutText}"
            TextAlignment="Center"/>
    </StackPanel>
</UserControl>
