            </Grid>
            <TextBlock Margin="10,10,0,0" FontSize="12" Text="UK Millionaire Maker code:" />
            <TextBlock
                Margin="10,5,0,0"
                FontWeight="Bold"
                Text="{Binding Ticket}"
